{
  "expo": {
    "name": "PaDrinks",
    "slug": "PaDrinks",
    "version": "1.0.0",
    "orientation": "landscape",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.padrinks.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "PaDrinks necesita acceso a la camara para tomar fotos de perfil y escanear codigos QR para unirse a partidas.",
        "NSPhotoLibraryUsageDescription": "PaDrinks necesita acceso a tu galeria de fotos para seleccionar una foto de perfil.",
        "NSBluetoothAlwaysUsageDescription": "PaDrinks usa Bluetooth para conectar dispositivos en modo multijugador local.",
        "UIRequiresFullScreen": true,
        "ITSAppUsesNonExemptEncryption": false,
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ]
      }
    },
    "android": {
      "package": "com.padrinks.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": false,
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      ["expo-screen-orientation", { "initialOrientation": "LANDSCAPE" }]
    ],
    "extra": {
      "eas": {
        "projectId": "9168383e-bba3-4bf5-9aa1-f3188639b471"
      }
    }
  }
}
